extends ../../layout.pug
block contents
    div.createRoom
        form
            input(placeholder="room name", required, type="text" id="roomName" name="roomName")
            input(placeholder="Your name", required, type="text" id="userName")
            button Enter room
    div.videoBox
        video#video(autoplay, width=400, height=400, playsinline)
        button#mute Mute
        button#camera Camera Off
        select#cameras
    div.messageBox
        ul
        form
            input(type="text" placeholder="Write a message")
            button Send 
block scripts
    script(src=`/socket.io/socket.io.js`)
    script(src=`/public/js/liveApp.js`)